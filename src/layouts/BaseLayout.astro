---
import '../styles/global.css';
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang='en'>
	<meta charset='UTF-8' />
	<meta
		name='description'
		content='Astro description'
	/>
	<meta
		name='viewport'
		content='width=device-width'
	/>
	<link
		rel='icon'
		type='image/svg+xml'
		href='/favicon.svg'
	/>
	<meta
		name='generator'
		content={Astro.generator}
	/>
	<title>{title}</title>

	<body
		class='antialiased bg-pure-white font-inter mx-auto font-normal max-w-[1440px] lg:mt-16 mt-8 overflow-x-hidden'>
		<slot />
	</body>
</html>
