---
import type { tipCard } from '../utils/types';
const { title, description, image }: tipCard = Astro.props.tipCard;
---

<div class='flex flex-col gap-8 md:flex-row lg:flex-col'>
	<div class='md:self-center lg:self-start'>
		<img
			src={image}
			alt=''
			class='size-16'
		/>
	</div>
	<div class='flex flex-col gap-6'>
		<h3 class='text-heading-m text-gunmetal'>{title}</h3>
		<p class='text-dark-electric-blue text-body-m'>{description}</p>
	</div>
</div>
